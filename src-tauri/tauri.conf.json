{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "bun run build:fe",
    "beforeDevCommand": "bun run dev:fe",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "DevUtils",
    "version": "0.3.5"
  },
  "plugins": {
    "http": {
      "scope": [
        "https://api.openai.com/*"
      ]
    },
    "updater": {
      "endpoints": ["https://Talljack.github.io/dev-utils/install.json"]
    }
  },
  "tauri": {
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon_512x512.png",
        "icons/icon.icns"
      ],
      "identifier": "com.dev-utils.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Dev Utils",
      "targets": "all",
      "updater": {
        "active": true,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc5MEU0MkJFRjRDRTUwMzkKUldRNVVNNzB2a0lPZWNMR0dvd3R3UnB4RWszZXl0bGZ0RnNzQVRrck0ydThhUzUrejV6Q1d4OW8K"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "http://*/*",
          "https://*/*",
          "$APP",
          "$CONFIG"
        ]
      },
      "csp": null
    },
    "trayIcon": {
      "iconAsTemplate": true,
      "iconPath": "icons/icon_512x512.png"
    },
    "windows": [
      {
        "fullscreen": true,
        "height": 600,
        "resizable": true,
        "title": "Dev Utils",
        "width": 800
      }
    ]
  }
}