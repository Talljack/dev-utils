{
  "name": "dev-utils",
  "version": "0.0.1",
  "packageManager": "bun@1.0.10",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "tauri:dev": "tauri dev",
    "check": "tsc --incremental --noEmit && rm -f tsconfig.tsbuildinfo",
    "lint": "eslint . --cache --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --cache --write \"src/**/*.{ts,tsx,json,css,scss,md}\"",
    "postinstall": "simple-git-hooks",
    "release": "node scripts/release.mjs",
    "updater": "node scripts/updater.mjs"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@tauri-apps/api": "^1.5.1",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "simple-git-hooks": "^2.9.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@tauri-apps/cli": "^1.5.6",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.4.16",
    "bun-types": "latest",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-refresh": "^0.4.4",
    "lint-staged": "^15.0.2",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.x"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun check && bun lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "src/*.{js,json,md,css,scss}": [
      "prettier --cache --write"
    ],
    "src/*.ts?(x)": [
      "eslint --cache --fix",
      "prettier --cache --parser=typescript --write"
    ]
  }
}