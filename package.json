{
  "name": "dev-utils",
  "version": "0.3.5",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.12.1",
  "scripts": {
    "dev:fe": "vite",
    "build:fe": "tsc && vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "dev": "tauri dev",
    "build": "tauri build",
    "release": "tr release --git",
    "updater": "tr updater",
    "tr": "tr",
    "fmt:rs": "cargo fmt",
    "check": "tsc --incremental --noEmit && rm -f tsconfig.tsbuildinfo",
    "lint": "eslint src --cache --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --cache --write \"src/**/*.{ts,tsx,json,css,scss,md}\"",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@bytemd/plugin-gemoji": "^1.21.0",
    "@bytemd/plugin-gfm": "^1.21.0",
    "@bytemd/plugin-highlight": "^1.21.0",
    "@bytemd/plugin-math": "^1.21.0",
    "@bytemd/plugin-mermaid": "^1.21.0",
    "@bytemd/react": "^1.21.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@tauri-apps/api": "^2.0.0-alpha.12",
    "@tauri-apps/plugin-clipboard-manager": "2.0.0-alpha.4",
    "@tauri-apps/plugin-dialog": "2.0.0-alpha.4",
    "@tauri-apps/plugin-fs": "2.0.0-alpha.4",
    "@tauri-apps/plugin-shell": "^2.0.0-alpha.3",
    "bytemd": "^1.21.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "github-markdown-css": "^5.5.0",
    "highlight.js": "^11.9.0",
    "js-yaml": "^4.1.0",
    "json2toml": "^6.0.0",
    "json2yaml": "^1.1.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.292.0",
    "monaco-editor": "^0.45.0",
    "monaco-editor-component": "^0.1.0",
    "picocolors": "^1.0.0",
    "quicktype-core": "^23.0.80",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-input-color": "^4.0.1",
    "react-router-dom": "^6.20.1",
    "react-tailwindcss-datepicker": "^1.6.6",
    "simple-git-hooks": "^2.9.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "toml": "^3.0.0",
    "turndown": "^7.1.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@tauri-apps/cli": "2.0.0-alpha.18",
    "@tauri-release/cli": "^0.2.5",
    "@types/crypto-js": "^4.2.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/turndown": "^5.0.4",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "lint-staged": "^15.2.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.2.2"
  },
  "engines": {
    "node": ">=18.x"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint && pnpm check && pnpm lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "src/*.{js,json,md,css,scss}": [
      "prettier --write"
    ],
    "src/*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  }
}
