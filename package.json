{
  "name": "dev-utils",
  "version": "0.0.1",
  "packageManager": "bun@1.0.13",
  "type": "module",
  "scripts": {
    "dev:fe": "vite",
    "build:fe": "tsc && vite build",
    "serve": "vite preview",
    "dev": "tauri dev",
    "build": "tauri build",
    "release": "tr release --git",
    "updater": "tr updater",
    "tr": "tr",
    "fmt:rs": "cargo fmt",
    "check": "tsc --incremental --noEmit && rm -f tsconfig.tsbuildinfo",
    "lint": "eslint . --cache --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --cache --write \"src/**/*.{ts,tsx,json,css,scss,md}\"",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@tauri-apps/api": "^1.5.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.10",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.292.0",
    "monaco-editor": "^0.44.0",
    "monaco-editor-component": "^0.0.7",
    "picocolors": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "react-tailwindcss-datepicker": "^1.6.6",
    "simple-git-hooks": "^2.9.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@tauri-apps/cli": "^1.5.6",
    "@tauri-release/cli": "^0.2.5",
    "@types/lodash-es": "^4.17.11",
    "@types/node": "^20.9.0",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.4.16",
    "bun-types": "latest",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "lint-staged": "^15.1.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-svgr": "^4.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.x"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun check && bun lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "src/*.{js,json,md,css,scss}": [
      "prettier --write"
    ],
    "src/*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  }
}
